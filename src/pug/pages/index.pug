extends ../layout/_layout

block content_block
	.container 
		.simple_header.blog__header 
			span.simple_header__trigger
				each item in [1,2,3] 
					span
			.simple_header__inner
				.simple_header__item 
					.list_title Tags: 
					ul.simple_list
						each item in blogTags
							li.simple_list__item
								a.simple_list__link(href= item.link)= item.title
				.simple_header__item 
					ul.simple_list
						li.simple_list__item
							a.list_title.list_title--link(href='#') Team 
						li.simple_list__item
							a.list_title.list_title--link(href='#') Contact					
		.blog__wrapper(data-blog)
			main.blog__content 
				h1.page_title Recent posts
				.article_list
					each article in blogPosts 
						article.article_card
							+picture({
								img: article.image,
								class: 'article_card__picture',
								img_class: 'article_card__img',
							})
							.article_card__content 
								h2.article_card__title
									a.article_card__link(href=article.link)= article.title
								.article_card__meta
									.article_card__author= article.author
									.article_card__date= article.date
								ul.article_card__categories.category_link__list
									each category in article.categories 
										li.category_link__item
											a.category_link(href=category.link)= category.name
								.article_card__comments
									a.comment_counter(href='#')
										.comment_counter__value 0
										.comment_counter__icon 
											+icon('comment')
				.more_btn
					.btn.btn--bordered older posts
			aside.blog__sidebar
				.sidebar_widget
					form(action="#", method="post") 
						.icon_input
							.icon_input__icon
								+icon('search')
							.icon_input__field
								+form_input({
									type: 'text',
									label: '',
									placeholder: 'Search blog',
									value: '',
									id: 'input_1',
								})
				.sidebar_widget 
					.sidebar_widget__title.widget_title 
						.widget_title__icon 
							+icon('light')
						.widget_title__title Announcements
					.sidebar_widget__list
						ul.widget_list 
							each item in announcements
								li.widget_list__item 
									a.widget_list__link(href=item.link)= item.title 
				.sidebar_widget 
					.sidebar_widget__title.widget_title 
						.widget_title__icon 
							+icon('rss')
						.widget_title__title Popular posts
					.sidebar_widget__list
						ul.widget_list 
							each item in popular
								li.widget_list__item 
									a.widget_list__link(href=item.link)= item.title 									
				.sidebar_widget
					.sidebar_widget__banner
						a.banner_link(href="#")
							img(src="./images/sidebar-banner.jpg", alt="")

				.sidebar_widget
					.sidebar_widget__title.widget_title 
						.widget_title__title Tag cloud			
					.sidebar_widget__tagcloud
						ul.tagcloud 
							each tag in tagCloud 
								li.tagcloud__item 
									a(href=tag.link class='tagcloud__link tagcloud__link--' + tag.size)= tag.title